<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD GlassFish Application Server 3.0 EJB 3.1//EN" "http://www.sun.com/software/appserver/dtds/sun-ejb-jar_3_1-0.dtd">
<sun-ejb-jar>
    <security-role-mapping>
        <role-name>users</role-name>
        <group-name>users</group-name>

    </security-role-mapping>
    <security-role-mapping>
        <role-name>admin</role-name>
        <group-name>admin</group-name>
    </security-role-mapping>
    <enterprise-beans>
        <ejb>
            <ejb-name>DocumentManagerBean</ejb-name>
            <jndi-name>ejb/DocumentManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>DocumentManagerBean</port-component-name>
                <endpoint-address-uri>services/document</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>LOVManagerBean</ejb-name>
            <jndi-name>ejb/LOVManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>LOVManagerBean</port-component-name>
                <endpoint-address-uri>services/lov</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>ProductManagerBean</ejb-name>
            <jndi-name>ejb/ProductManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>ProductManagerBean</port-component-name>
                <endpoint-address-uri>services/product</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>ProductBaselineManagerBean</ejb-name>
            <jndi-name>ejb/ProductBaselineManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>ProductBaselineManagerBean</port-component-name>
                <endpoint-address-uri>services/productBaseline</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>WorkflowManagerBean</ejb-name>
            <jndi-name>ejb/WorkflowManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>WorkflowManagerBean</port-component-name>
                <endpoint-address-uri>services/workflow</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>UserManagerBean</ejb-name>
            <jndi-name>ejb/UserManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>UserManagerBean</port-component-name>
                <endpoint-address-uri>services/user</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>AccountManagerBean</ejb-name>
            <jndi-name>ejb/AccountManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>AccountManagerBean</port-component-name>
                <endpoint-address-uri>services/account</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>PSFilterManagerBean</ejb-name>
            <jndi-name>ejb/PSFilterManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>PSFilterManagerBean</port-component-name>
                <endpoint-address-uri>services/psFilter</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>MailerBean</ejb-name>
            <jndi-name>ejb/MailerBean</jndi-name>
            <resource-ref>
                <res-ref-name>mail/docdokuSMTP</res-ref-name>
                <jndi-name>mail/docdokuSMTP</jndi-name>
            </resource-ref>
        </ejb>
        <ejb>
            <ejb-name>ConverterBean</ejb-name>
            <jndi-name>ejb/ConverterBean</jndi-name>
            <bean-pool>
                <steady-pool-size>1</steady-pool-size>
                <resize-quantity>1</resize-quantity>
                <max-pool-size>1</max-pool-size>
            </bean-pool>
        </ejb>
    </enterprise-beans>
</sun-ejb-jar>
